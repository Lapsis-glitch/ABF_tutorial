colvarsTrajFrequency      2000
colvarsRestartFrequency  20000

colvar {
   name AtomDistance
  
   width 0.1

   lowerWall	12.0
   upperWall    32.0
   
   lowerBoundary 12.0
   upperBoundary 32.0

